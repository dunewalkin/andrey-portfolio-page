{
   "version": 2,
   "builds": [
     {
       "src": "public/**/*",
       "use": "@vercel/static"
     },
     {
       "src": "views/**/*",
       "use": "@vercel/static"
     },
     {
       "src": "index.html",
       "use": "@vercel/static"
     }
   ],
   "routes": [
     {
       "src": "/about",
       "dest": "/views/about.html"
     },
     {
       "src": "/cv",
       "dest": "/views/cv.html"
     },
     {
       "src": "/music",
       "dest": "/views/music.html"
     },
     {
       "src": "/sound",
       "dest": "/views/sound.html"
     },
     {
       "src": "/views/(.*)",
       "dest": "/views/$1"
     },
     {
       "src": "/(.*)",
       "dest": "/index.html"
     }
   ]
 }
 